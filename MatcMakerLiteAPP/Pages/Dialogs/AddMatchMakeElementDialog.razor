@using MatchMakerLib.MatchMakerModel;
@using MatchMakerLib.Data;
@inject MatchMakerDbContext dbcontext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
            New @ElementType
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@Element.Name" Label="Name" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="AddElement">@ElementType</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    //[Parameter] public Player Player { get; set; } = new Player();
    [Parameter] public MatchMakerElement Element { get; set; }
    [Parameter] public string ElementType { get; set; }


    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void AddElement()
    {
        dbcontext.Add(Element);
        dbcontext.SaveChanges();
        MudDialog.Close(DialogResult.Ok(true));
    }
}