@using MatchMakerLib.MatchMakerModel;
@using MatchMakerPro.Data;
@inject MatchMakerDbContext dbcontext

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-3 mb-n1" />
            Save tournament
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudNumericField @bind-Value="@Match.Team1Points" Min="1" MaxLength="2" Label="@Match.Team1.Name" />
        <MudNumericField @bind-Value="@Match.Team2Points" Min="1" MaxLength="2" Label="@Match.Team2.Name" />

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Success" OnClick="SaveMatch">Save</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance? MudDialog { get; set; }

    [Parameter] public Match Match { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();

    }
    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void SaveMatch()
    {
        dbcontext.SaveChanges();
        MudDialog.Close(DialogResult.Ok(true));
    }
}